#!/bin/bash

# 从阿里云的容器服务中获取专属ID
REGISTRY_MIRROR_ID=

function aliyun-docker-mirror() {
  sudo mkdir -p /etc/docker
  sudo tee /etc/docker/daemon.json <<-EOF
{
  "registry-mirrors": ["https://${REGISTRY_MIRROR_ID}.mirror.aliyuncs.com"]
}
EOF
  sudo systemctl daemon-reload
  sudo systemctl restart docker
}

