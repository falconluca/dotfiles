function gitcr() {
  if [ -z "$1" ]; then
      echo -e "\n==> Repo location not supplied\n"
      exit 1
  fi

  for i in {1..10}; do
     timeout 5 git clone "$1"
     if [ $? -eq 0 ]; then
        break
     fi
     echo -e "\n==> timeout... ${i} retry"
  done
}
export -f gitcr


